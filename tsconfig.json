{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["koa-body"]
  },
  "include": [
    "next-env.d.ts",
    "*.ts",
    "*.tsx",
    ".next/types/**/*.ts",
    "pages/api/product.tsx",
    "pages/api/db-operations.tsx",
    "server/server.ts"
  ],
  "exclude": ["node_modules"]
}
